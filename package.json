    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:dev": "rimraf dist && tsc --project tsconfig.dev.json",
    "prettier": "prettier all --write \"src/**/*.ts\"",
    "tslint": "tslint --fix -c tslint.json -p .",
    "tslint:check": "tslint -c tslint.json -p .",
    "lint": "yarn run prettier && yarn run tslint",
    "dev": "nodemon -e ts --exec \"ts-node --project tsconfig.dev.json -r dotenv/config src/index.ts dotenv_config_path=./config/.env \"| bunyan",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "test": "node -r dotenv/config ./node_modules/mocha/bin/_mocha dotenv_config_path=./config/.env.test --opts ./mocha.opts",
    "test:cover": "node -r dotenv/config ./node_modules/nyc/bin/nyc.js --check-coverage --lines 70 --functions 80 ./node_modules/mocha/bin/_mocha dotenv_config_path=./config/.env.test --opts ./mocha.opts",
    "pre-commit": "lint-staged",
    "migrate:create": "node node_modules/knex/bin/cli.js --knexfile ./knexfile.ts migrate:make",
    "migrate:up": "node --require dotenv/config node_modules/knex/bin/cli.js migrate:latest dotenv_config_path=./config/.env --knexfile ./knexfile.ts",
    "migrate:rollback": "node --require dotenv/config node_modules/knex/bin/cli.js migrate:rollback dotenv_config_path=./config/.env --knexfile ./knexfile.ts",
    "migrate:tests": "node --require dotenv/config node_modules/knex/bin/cli.js migrate:rollback dotenv_config_path=./config/.env.test --knexfile ./knexfile.ts && node --require dotenv/config node_modules/knex/bin/cli.js migrate:latest dotenv_config_path=./config/.env.test --knexfile ./knexfile.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix -c tslint.json",
      "git add"
    ]
  },
  "nyc": {
    "per-file": true,
    "lines": 80,
    "functions": 80,
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/node_modules/**",
      "src/index.ts",
      "src/infrastructure/webserver/**",
      "**/**/interfaces.ts",
      "**/**/**test.ts",
      "src/utils/**",
      "src/delivery/controller/media.endpoint.ts"
    ],
    "all": true,
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "report-dir": "coverage"
  }
}
